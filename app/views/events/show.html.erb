<p id="notice"><%= notice %></p>

<div class="uk-grid">
  <div class="uk-grid-1-2">
    <%= cl_image_tag (@event.image), width: 400 %>
  </div>
  <div class="uk-grid-2-2">
    <h1>
      <%= @event.name %>
    </h1>
    <p>
      <% @sessions.each do |session| %>
        <li>
          <b><%= session.start_date.strftime("%A"" ""%d"" ""%B"" ""%Y") %></b>
          <%= session.venue %>
          <%= session.city %>
          <%= session.state %>
        </li>
      <% end %>
    </p>
  </div>
</div>
<div class="sum_text_pad">
  <%= sanitize(@event.details) %>
</div>

<div class="sum_text_pad">
  <div class="uk-accordion" data-uk-accordion="{showfirst: false}" %>
    <% @sessions.each do |session| %>
      <h3 class="uk-accordion-title"><%= session.start_date.strftime("%A"" ""%d"" ""%B"" ""%Y") %> <%= session.venue %></h3>
      <div class="uk-accordion-content">
        <div class="uk-grid">
          <div class="uk-width-3-4">
            <h3>
              <%= session.venue %>
            </h3>
            <%= session.start_date.strftime("%A"" ""%d"" ""%B"" ""%Y") %>
            <p>
              <%= session.street if session.street? %>
              <%= session.city %>
              <%= session.state %>
            </p>
          </div>
          <div class="uk-width-1-4">
            <div class="uk-text-right">
              <% if session.booking_link? %>
                <p>
                  <%= link_to image_tag('buttons/Taikoz_BookNow.png', width: '120'), session.booking_link %>
                </p>
                </br>
              <% end %>
            </div>
          </div>
        </div>
        <p>
          <%= sanitize(session.session_details) %>
        </p>
      </div>
    <% end %>
  </div>
</div>

<p>
  <%= link_to image_tag("buttons/Taikoz_Back.png", width: '100'), events_path, alt: "Back" %>
</p>
