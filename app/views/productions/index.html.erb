<div class="uk-grid">
  <div class="uk-width-1-1 uk-width-small-2-3">
    <h1><%= @heading_text %></h1>
  </div>
  <div class="uk-hidden-small uk-width-1-3 uk-text-right" style="padding-top: 10px">
    <div class="uk-button-dropdown" data-uk-dropdown>
      <button class="uk-button">Select Production Type</button>
        <div class="uk-dropdown uk-dropdown-small">
          <ul class="uk-nav uk-nav-dropdown">
            <li><%= link_to "All Productions", productions_path %></li>
            <li><%= link_to "Mainstage", productions_path(filter: "mainstage") %></li>
            <li><%= link_to "Corporate", productions_path(filter: "corporate") %></li>
            <hr>
            <li><%= link_to "All School Productions", productions_path(filter: "school_all") %></li>
            <li><%= link_to "School Shows", productions_path(filter: "school_show") %></li>
            <li><%= link_to "School Workshop", productions_path(filter: "school_workshop") %></li>
          </ul>
        </div>
    </div>
  </div>
  <div class="uk-visible-small uk-width-1-1" style="padding-top: 10px">
    <div class="uk-button-dropdown" data-uk-dropdown>
      <button class="uk-button">Select Production Type</button>
        <div class="uk-dropdown uk-dropdown-small">
          <ul class="uk-nav uk-nav-dropdown">
            <li><%= link_to "All Productions", productions_path %></li>
            <li><%= link_to "Mainstage", productions_path(filter: "mainstage") %></li>
            <li><%= link_to "Corporate", productions_path(filter: "corporate") %></li>
            <hr>
            <li><%= link_to "All School Productions", productions_path(filter: "school_all") %></li>
            <li><%= link_to "School Shows", productions_path(filter: "school_show") %></li>
            <li><%= link_to "School Workshop", productions_path(filter: "school_workshop") %></li>
          </ul>
        </div>
    </div>
  </div>
</div>
<hr>
<div class="uk-grid uk-grid-match" data-uk-grid-match="{target:'.uk-panel'}" data-uk-grid-margin>
  <% @productions.each do |production| %>
    <div class="uk-width-1-1 uk-width-medium-1-3">
      <div class="uk-panel uk-panel-box uk-panel-hover uk-panel-divider">
        <div class="uk-panel-teaser">
          <% production.images.first(1).each do |first_image| %>
          <%= link_to cl_image_tag(first_image.image, width: 270, height: 152, crop: :fill), production_path(production) %>
          <% end %>
        </div>
        <h2><b><%= link_to production.name, production_path(production), style: 'color: #404041' %></b></h2>
        <h3 style="margin-top: 0px"><%= link_to production.catagory.humanize, production_path(production) %></h3>
        <div class="longfont">
          <%= link_to sanitize(truncate(production.synopsis, length: 200, separator: ' ', escape: false)), production_path(production), style: 'color: #404041' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
