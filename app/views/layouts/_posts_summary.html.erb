<div class="main_blocks">
  <div class="uk-grid">
    <div class="uk-width-1-3">
      <h2>
        Current News
      </h2>
      <% @posts.each do |post| %>
        <h2>
          <%= link_to post.title, post_path(post) %>
        </h2>
        <p>
          <%= truncate(post.content, length: 150) %>
        </p>
        <%= link_to image_tag("buttons/Taikoz_LearnMore.png", width: '150'), post_path(post), alt: "Learn More" %>
      <% end %>
    </div>
    <div class="uk-width-1-3">
      <h2>
        Upcoming Performances
      </h2>
      <img src="images/buttons/Taikoz_LearnMore.png", width="150px">
    </div>
    <div class="uk-width-1-3">
      <h2>
        Facebook
      </h2>
    </div>
  </div>
</div>
