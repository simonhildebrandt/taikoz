<div class="main_blocks">
  <div class="uk-grid">
    <div class="uk-width-small-1-1 uk-width-medium-1-3">
      <div class="uk-hidden-small">
        <figure class="uk-overlay uk-overlay-hover">
          <div class="uk-overlay uk-overlay-scale">
            <%= link_to image_tag("taikoz_upcoming_small.jpg"), events_path, class: 'uk-text-center' %>
          </div>
        </figure>
      </div>
      <div class="uk-visible-small" style="padding-top: 35px">
        <h1>Upcoming Events</h1>
      </div>
      <% @events.each do |event| %>
        <div class="sum_text_pad">
          <h2>
            <%= link_to event.name, event_path(event), style: 'color: #404041' %>
           </h2>
          <p>
            <% unless event.sessions.first.start_date == event.sessions.last.start_date%>
              <b><%= event.sessions.first.start_date.strftime("%d"" ""%b") %></b> to <b><%= event.sessions.last.start_date.strftime("%d"" ""%b"" ""%Y") %></b>
            <% else %>
              <b><%= event.sessions.first.start_date.strftime("%d"" ""%b"" ""%Y") %></b>
            <% end %>
          </p>
          <div class="longfont">
            <p>
              <%= truncate(event.details, length: 250, separator: ' ', escape: false) %>
            </p>
          </div>
          <p>
            <%= link_to image_tag("buttons/Taikoz_LearnMore.png", width: '150'), event_path(event), alt: "Learn More" %>
          </p>
        </div>
      <% end %>
    </div>
    <div class="uk-width-small-1-1 uk-width-medium-1-3">
      <div class="uk-hidden-small">
        <figure class="uk-overlay uk-overlay-hover">
          <div class="uk-overlay-scale">
            <%= link_to image_tag("taikoz_latest_news_small.jpg"), posts_path, class: 'uk-text-center' %>
          </div>
        </figure>
      </div>
      <div class="uk-visible-small" style="padding-top: 35px">
        <h1>Current News</h1>
      </div>
      <% @posts.each do |post| %>
        <div class="sum_text_pad">
          <h2>
            <%= link_to post.title, post_path(post), style: 'color: #404041' %>
          </h2>
          <p>
            Author: <%= post.author %>
          </p>
          <div class="longfont">
            <p>
              <%= truncate(post.content, length: 250, separator: ' ', escape: false) %>
            </p>
          </div>
          <%= link_to image_tag("buttons/Taikoz_LearnMore.png", width: '150'), post_path(post), alt: "Learn More" %>
        </div>
      <% end %>
    </div>
    <div class="uk-width-small-1-1 uk-width-medium-1-3">
      <div class="uk-hidden-small">
        <figure class="uk-overlay uk-overlay-hover">
          <div class="uk-overlay-scale">
            <%= link_to image_tag("no_use_small.jpg") %>
          </div>
        </figure>
      </div>
      <div class="uk-visible-small" style="padding-top: 35px">
        <h1>Subscribe</h1>
      </div>
      <div class="sum_text_pad">
        <!-- <h2 class="uk-hidden-small">SUBSCRIBE <small><a href="#subscribe-modal" data-uk-modal>Click Here</a></small></h2> -->
          <div class="fb-page uk-text-center" data-href="https://www.facebook.com/TAIKOZfan" data-small-header="true" data-adapt-container-width="true" data-hide-cover="true" data-show-facepile="true" data-show-posts="true">
            <div class="fb-xfbml-parse-ignore"><blockquote cite="https://www.facebook.com/TAIKOZfan"><a href="https://www.facebook.com/TAIKOZfan">Facebook</a></blockquote>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>
