<p id="notice"><%= notice %></p>

<div class="uk-grid">
  <div class="uk-width-1-1 uk-width-medium-1-2">
    <%= cl_image_tag(@post.image_1) %>
  </div>
  <div class="uk-width-1-1 uk-width-medium-1-2">
    <h1>
      <%= @post.title %>
    </h1>
    <h3>
      Author: <%= @post.author %>
    </h3>
    <h3>
      Date: <%= @post.published_at.strftime("%A"" ""%d"" ""%B"" ""%Y") if @post.published_at? %>
    </h3>
  </div>
</div>
<div class="sum_text_pad longfont">
  <%= sanitize(@post.content) %>
</div>
<div class="uk-text-center main_blocks">
  <ul class="uk-grid uk-grid-width-small-1-1 uk-grid-width-medium-1-3 uk-grid-width-large-1-5" data-uk-grid-margin>
    <li>
      <a href="<%= @post.image_1.url %>" data-uk-lightbox="{group:'post_images'}" class="article_img_pad"><%= (cl_image_tag @post.image_1) %></a>
    </li>
    <li>
      <% unless @post.image_2.url == nil %>
        <a href="<%= @post.image_2.url %>" data-uk-lightbox="{group:'post_images'}" class="article_img_pad"><%= (cl_image_tag @post.image_2) %></a>
      <% end %>
    </li>
    <li>
      <% unless @post.image_3.url == nil %>
        <a href="<%= @post.image_3.url %>" data-uk-lightbox="{group:'post_images'}" class="article_img_pad"><%= (cl_image_tag @post.image_3) %></a>
      <% end %>
    </li>
    <li>
      <% unless @post.image_4.url == nil %>
        <a href="<%= @post.image_4.url %>" data-uk-lightbox="{group:'post_images'}" class="article_img_pad"><%= (cl_image_tag @post.image_4) %></a>
      <% end %>
    </li>
    <li>
      <% unless @post.image_5.url == nil %>
        <a href="<%= @post.image_5.url %>" data-uk-lightbox="{group:'post_images'}" class="article_img_pad"><%= (cl_image_tag @post.image_5) %></a>
      <% end %>
    </li>
  </ul>
</div>
<p>
  <%= link_to image_tag("buttons/Taikoz_Back.png", width: '100'), posts_path, alt: "Back" %>
</p>
