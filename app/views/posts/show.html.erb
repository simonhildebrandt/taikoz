<p id="notice"><%= notice %></p>

<div class="uk-grid">
  <div class="uk-grid-1-2">
    <%= cl_image_tag(@post.image_1, width: 400) %>
  </div>
  <div class="uk-grid-2-2">
    <h1>
      <%= @post.title %>
    </h1>
    <p>
      Author: <%= @post.author %> Date: <%= @post.created_at.strftime("%A"" ""%d"" ""%B"" ""%Y") %>
    </p>
  </div>
</div>
<div>
  <%= sanitize(@post.content) %>
</div>
<div class="uk-text-center">
  <a href="<%= @post.image_1.url %>" data-uk-lightbox><%= (cl_image_tag @post.image_1, width: 200) %></a>
  <% unless @post.image_2 == nil %>
    <a href="<%= @post.image_2.url %>" data-uk-lightbox><%= (cl_image_tag @post.image_2, width: 200) %></a>
  <% end %>
  <% unless @post.image_3 == nil %>
    <a href="<%= @post.image_3.url %>" data-uk-lightbox><%= (cl_image_tag @post.image_3, width: 200) %></a>
  <% end %>
  <% unless @post.image_4 == nil %>
    <a href="<%= @post.image_4.url %>" data-uk-lightbox><%= (cl_image_tag @post.image_4, width: 200) %></a>
  <% end %>
  <% unless @post.image_5 == nil %>
    <a href="<%= @post.image_5.url %>" data-uk-lightbox><%= (cl_image_tag @post.image_5, width: 200) %></a>
  <% end %>
</div>
<p>
  <%= link_to image_tag("buttons/Taikoz_Back.png", width: '100'), posts_path, alt: "Back" %>
</p>
