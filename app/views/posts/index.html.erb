<p id="notice"><%= notice %></p>

<h1>Posts</h1>

    <% @posts.each do |post| %>
        <h2>
          <%= post.title %>
        </h2>
        <p>
          <strong>Author: </strong><%= post.author %> | <strong>Date: </strong><%= post.created_at.strftime("%A"" ""%d"" ""%B"" ""%Y") %>
        </p>
        <p>
          <%= truncate(post.content, length: 80) %>
        </p>
        <p><strong><%= link_to "Read more...", post_path(post) %></strong></p>
    <% end %>
