<p id="notice"><%= notice %></p>

<%= link_to image_tag("taikoz_latest_news_small.jpg"), posts_path, class: 'uk-text-center' %>
<h1>News</h1>
    <% @posts.each do |post| %>
      <div class="feed_padding">
        <div class="uk-grid">
          <div class="uk-width-medium-1-4">
            <div class="uk-vertical-align">
              <div class="uk-vertical-align-middle">
                <%= link_to (cl_image_tag(post.image_1, width: 220)), post_path(post) %>
              </div>
            </div>
          </div>
          <div class="uk-width-medium-3-4">
          <h2>
            <%= link_to post.title, post_path(post) %>
          </h2>
          <p>
            <strong>Author: </strong><%= post.author %> | <strong>Date: </strong><%= post.created_at.strftime("%A"" ""%d"" ""%B"" ""%Y") %>
          </p>
          <p>
            <%= truncate(post.content, length: 200, separator: " ", escape: false) %>
          </p>
          <p><strong><%= link_to "Read more...", post_path(post) %></strong></p>
          </div>
        </div>
      </div>
      <hr>
    <% end %>

<%= will_paginate @posts %>
<p>
  <%= link_to image_tag("buttons/Taikoz_Back.png", width: '100'), root_path, alt: "Back" %>
</p>
