<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th>Image</th>
			<th><%= casein_sort_link "Created", :created_at %></th>
			<th><%= casein_sort_link "Title", :title %></th>
			<th><%= casein_sort_link "Author", :author %></th>
			<th><%= casein_sort_link "Content", :content %></th>
			<th><%= casein_sort_link "Status", :post_status %></th>
			<th><%= casein_sort_link "Published", :published_at %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>

	<% posts.each do |post| %>
		<tr>
			<td><div class="index_image_pad"><%= cl_image_tag post.image_1, width: 70 %></div></td>
			<td><%= casein_table_cell_link post.created_at.strftime("%A"" ""%d"" ""%B"" ""%Y"), casein_post_path(post) %></td>
			<td><strong><%= casein_table_cell_link post.title, casein_post_path(post) %></stong></td>
			<td><%= casein_table_cell_link post.author, casein_post_path(post) %></td>
			<td><%= casein_table_cell_link truncate(post.content, length: 240, separator: ' ', escape: false), casein_post_path(post) %></td>
			<td>
				<div class="index_image_pad">
					<%= link_to post.post_status, casein_post_path(post), class: "label label-warning" if post.post_status == "Draft" %>

					<%= casein_table_cell_link post.post_status, casein_post_path(post), class: "label label-success" if post.post_status == "Published" %>
				</div>
			</td>
			<td>
				<%= casein_table_cell_link post.published_at.strftime("%A"" ""%d"" ""%B"" ""%Y"), casein_post_path(post) if post.published_at? %>
			</td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_post_path(post), :method => :delete, :data => { :confirm => "Are you sure you want to delete this post?" }) %>
			</td>
		</tr>
	<% end %>
</table>
