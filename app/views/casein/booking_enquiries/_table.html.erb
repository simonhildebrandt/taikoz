			<td><%= casein_table_cell_link booking_enquiry.expected_attendance, casein_booking_enquiry_path(booking_enquiry) %></td>
			<td><%= casein_table_cell_link booking_enquiry.budget, casein_booking_enquiry_path(booking_enquiry) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_booking_enquiry_path(booking_enquiry), :method => :delete, :data => { :confirm => "Are you sure you want to delete this booking enquiry?" }) %>
			</td>
		</tr>
	<% end %>
</table>
