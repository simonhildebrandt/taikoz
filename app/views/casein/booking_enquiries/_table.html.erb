			<td><%= casein_table_cell_link booking_enquiry.phone, casein_booking_enquiry_path(booking_enquiry) %></td>
			<td><%= casein_table_cell_link booking_enquiry.email, casein_booking_enquiry_path(booking_enquiry) %></td>
			<td><%= casein_table_cell_link booking_enquiry.organisation_name, casein_booking_enquiry_path(booking_enquiry) %></td>
			<td><%= casein_table_cell_link booking_enquiry.event_date, casein_booking_enquiry_path(booking_enquiry) %></td>
			<td><%= casein_table_cell_link booking_enquiry.event_time, casein_booking_enquiry_path(booking_enquiry) %></td>
			<td><%= casein_table_cell_link booking_enquiry.event_location, casein_booking_enquiry_path(booking_enquiry) %></td>
			<!-- <td><%= casein_table_cell_link booking_enquiry.event_type, casein_booking_enquiry_path(booking_enquiry) %></td> -->
