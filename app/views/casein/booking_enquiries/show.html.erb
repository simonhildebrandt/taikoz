	<div class="col-sm-6">
		<p><b>Performace Requirements</b></p>
		<%= @booking_enquiry.performance_requirments %>
	</div>
	<div class="col-sm-6">
		<p><b>Access and Parking</b></p>
		<p><%= @booking_enquiry.access_details %></p>
