<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Name", :name %></th>
			<th><%= casein_sort_link "Synopsis", :synopsis %></th>
			<th><%= casein_sort_link "Tech summary", :tech_summary %></th>
			<th><%= casein_sort_link "Video link", :video_link %></th>
			<th><%= casein_sort_link "Tech spec link", :tech_spec_link %></th>
			<th><%= casein_sort_link "Media pack link", :media_pack_link %></th>
			<th><%= casein_sort_link "Catagory", :catagory %></th>
			<th><%= casein_sort_link "Images", :images %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>

	<% productions.each do |production| %>
		<tr>
			<td><b><%= casein_table_cell_link production.name, casein_production_path(production) %></b></td>
			<td><%= casein_table_cell_link truncate(production.synopsis, length: 50, separator: ' ', escape: false), casein_production_path(production) %></td>
			<td><%= casein_table_cell_link truncate(production.tech_summary, length: 50, separator: ' ', escape: false), casein_production_path(production) %></td>
			<td><%= casein_table_cell_link production.video_link?, casein_production_path(production) %></td>
			<td><%= casein_table_cell_link production.tech_spec_link, casein_production_path(production) %></td>
			<td><%= casein_table_cell_link production.media_pack_link, casein_production_path(production) %></td>
			<td><%= casein_table_cell_link production.catagory, casein_production_path(production) %></td>
			<td><%= casein_table_cell_link production.images.count, casein_production_path(production) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_production_path(production), :method => :delete, :data => { :confirm => "Are you sure you want to delete this production?" }) %>
			</td>
		</tr>
	<% end %>
</table>
