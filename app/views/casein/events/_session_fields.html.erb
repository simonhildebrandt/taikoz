<div style="padding-top: 20px">
  <div class="nested-fields">

    <h2>Performances</h2>
    <div class="button_pad">
      <%= link_to_remove_association 'Remove Performance', f, class: 'btn btn-warning' %>
    </div>
    <div class="row">
      <div class="col-lg-4">
        <p>
          <label>
            Start Date:
          </label>
          <%= f.date_field :start_date %>
        </p>
        <p>
          <label>
            End Date:
          </label>
          <%= f.date_field :end_date %>
        </p>
        <p>
          <label>
            Start Time:
          </label>
          <%= f.time_field :start_time %>
        </p>
        <p>
          <label>
            Duration:
          </label>
          <%= f.time_field :duration %>
        </p>

      </div>
      <div class="col-lg-8">
        <%= casein_select f, f.object, :location_id, options_for_select(location_options, selected: f.object.location_id) %>
        <label>
          Booking Link
        </label>
        <p>
          <%= f.url_field :booking_link, size: 50 %>
        </p>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <%= casein_text_area f, f.object, :session_details, rows: 10, class: 'wysihtml5', casein_label: 'Session Specific Details', casein_sublabel: 'Optional' %>
      </div>
    </div>

  </div>
</div>
