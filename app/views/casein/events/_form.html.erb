<!-- Scaffolding generated by Casein v5.1.1.5 -->
<%= cloudinary_js_config %>
<div class="row">
	<div class="col-lg-6">
		<%= casein_text_field f, f.object, :name, casein_label: 'Show Name' %>

	<% if @event.image? %>
		<p>
			<label>
				Change Image
				<%= f.file_field :image %>
				<%= f.hidden_field :image_cache %>
			</label>
		</p>
	<% else %>
		<p>
			<label>
				Add Image
				<%= f.file_field :image %>
				<%= f.hidden_field :image_cache %>
			</label>
		</p>
	<% end %>
		<% if @event.image? %>
			<p>
				<label>
					<%= f.check_box :remove_image %>
					Remove Image
				</label>
			</p>
		<% end %>
		<p>
			<strong>Event Status: </strong><%= @event.event_status.humanize %>
			
		</p>
	</div>
	<div class="col-lg-6">
			<%= cl_image_tag(@event.image, width: 400) %>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
		<%= casein_text_area_big f, f.object, :details, rows: 20, class: 'wysihtml5' %>
	</div>
</div>
<div class="row">
	<div class="col-lg-12">

		<%= f.fields_for :sessions do |session| %>
			<%= render 'session_fields', :f => session %>
		<% end %>
		<div class="pull-right">
			<%= link_to_add_association 'Add Performace', f, :sessions, class: 'btn btn-success' %>
		</div>
	</div>

</div>
