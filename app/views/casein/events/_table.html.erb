<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Name", :name %></th>
			<th><%= casein_sort_link "Details", :details %></th>
			<th><%= casein_sort_link "Image", :image %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% events.each do |event| %>
		<tr>
			<td><%= casein_table_cell_link event.name, casein_event_path(event) %></td>
			<td><%= casein_table_cell_link event.details, casein_event_path(event) %></td>
			<td><%= casein_table_cell_link event.image, casein_event_path(event) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_event_path(event), :method => :delete, :data => { :confirm => "Are you sure you want to delete this event?" }) %>
			</td>
		</tr>
	<% end %>
</table>